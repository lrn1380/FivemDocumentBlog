@model List<Models.DocsModels.NativeCategory>
@{
    ViewData["Title"] = "دسته بندی ها";
    ViewData["Meta-Title"] = "همه دسته بندی ها";
    var index = 1;
}

@section Router
{
    <li><a href="/Admin/"><i class="fa fa-dashboard"></i> خانه</a></li>
    <li><a asp-area="Admin" asp-controller="NativeApi" asp-action="Index"> دسته بندی ها</a></li>
    <li class="active">همه دسته بندی ها</li>
}

<div class="box box-info">

    <div class="box-header with-border">
        <h3 class="box-title">نمایش همه</h3>
    </div>

    <div class="box-body">

        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>نام دسته بندی</th>
                    <th>فعالیت</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">ویرایش</a> |
                            <a asp-action="Remove" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">حذف</a>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>

    </div>

</div>
