@model ViewModels.Admin.Docs.NativeApiSet.AdminAddApiSetViewModel
@{
    ViewData["Title"] = "Api Sets";
    ViewData["Meta-Title"] = "ساخت Api جدید";
}

@section Router
{
    <li><a href="/Admin/"><i class="fa fa-dashboard"></i> خانه</a></li>
    <li><a asp-area="Admin" asp-controller="NativeApi" asp-action="Index"> موارد قابل استفاده</a></li>
    <li class="active">ساخت Api جدید</li>
}

<div class="box box-info">
    
    <div class="box-header with-border">
        <h3 class="box-title">افزودن ApiSet جدید</h3>
    </div>
    
    <div class="box-body">
        
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger text-sm"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="ClassName"></label>
                <input asp-for="ClassName" class="form-control"/>
                <span asp-validation-for="ClassName" class="text-danger text-sm"></span>
            </div>
        
            <div class="form-group">
                <input type="submit" value="ثبت ApiSet" class="btn btn-success btn-block" />
            </div>
        </form>

    </div>

</div>
