@model ViewModels.Admin.Menus.AdminEditMenuViewModel

@{
    ViewData["Title"] = "منو ها";
    ViewData["Meta-Title"] = "ویرایش " + Model.Title;
}

@section Router
{
    <li><a href="/Admin/"><i class="fa fa-dashboard"></i> خانه</a></li>
    <li><a asp-area="Admin" asp-controller="Menu" asp-action="Index"> منو ها</a></li>
    <li class="active">ویرایش @Model.Title</li>
}

<div class="box box-info">

    <div class="box-header">
        <h3 class="box-title">ویرایش @Model.Title</h3>
    </div>

    <div class="box-body">

        <form method="post">
            
            @Html.HiddenFor(m => m.MenuId)

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger text-sm"></span>
            </div>

            <div class="form-group">
                <label asp-for="TargetUrl"></label>
                <input asp-for="TargetUrl" class="form-control"/>
                <span asp-validation-for="TargetUrl"></span>
            </div>

            <div class="form-group">
                <label asp-for="Target"></label>
                <input asp-for="Target" class="form-control"/>
                <span asp-validation-for="Target" class="text-danger text-sm"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rel"></label>
                <input asp-for="Rel" class="form-control"/>
                <span asp-validation-for="Rel"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ویرایش منو" class="btn btn-warning btn-block"/>
            </div>
        </form>

    </div>

</div>
