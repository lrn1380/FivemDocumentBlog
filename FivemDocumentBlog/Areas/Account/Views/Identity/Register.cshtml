@model ViewModels.Authentication.RegisterUserViewModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="container">
    
    <form method="post">
        
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control"/>
            <span asp-validation-for="Username" class="text-danger text-sm"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger text-sm"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger text-sm"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="RePassword"></label>
            <input asp-for="RePassword" class="form-control" />
            <span asp-validation-for="RePassword" class="text-danger text-sm"></span>
        </div>
        
        <div class="form-group">
            <input type="submit" value="ثبت نام" class="btn btn-success btn-block"/>
        </div>

    </form>

</div>

